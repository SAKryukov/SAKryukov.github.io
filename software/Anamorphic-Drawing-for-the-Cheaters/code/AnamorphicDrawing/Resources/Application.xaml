<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:system="clr-namespace:System;assembly=mscorlib"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <FontFamily x:Key="commonFont">Verdana</FontFamily>
    <system:Double x:Key="commonFontSize">12</system:Double>
    <Thickness x:Key="commonButtonPadding">10 0 10 0</Thickness>
    <Thickness x:Key="aboutButtonPadding">10 4 10 4</Thickness>
    <Style x:Key="commonControlFont" TargetType="{x:Type Control}">
        <Setter Property="FontFamily" Value="{StaticResource commonFont}"/>
        <Setter Property="FontSize" Value="{StaticResource commonFontSize}"/>
    </Style>
    <Style x:Key="arrowButton" TargetType="Button">
        <Setter Property="FontFamily" Value="Lucida Sans Unicode"/>
        <Setter Property="FontSize" Value="{StaticResource commonFontSize}"/>
        <Setter Property="Padding" Value="{StaticResource commonButtonPadding}"/>
    </Style>
</ResourceDictionary>